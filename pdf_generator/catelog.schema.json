{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "minItems": 1,
  "items": {
    "$ref": "#/definitions/category"
  },
  "definitions": {
    "product": {
      "type": "object",
      "properties": {
        "product name": { "type": "string" },
        "description": { "type": "string" },
        "image url": { "type": "string" },
        "features": {
          "type": "array",
          "items": { "type": "string" }
        },
        "price": { "type": "string" }
      },
      "required": ["product name", "description", "image url", "features", "price"]
    },
    "category name": {
      "type": "object",
      "properties": {
        "products": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/product" }
        }
      },
      "required": ["products"]
    }
  }
}
